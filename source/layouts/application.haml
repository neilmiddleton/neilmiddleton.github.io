!!! Strict
%html
  %head
    %title
      = "#{yield_content(:page_title)} - Neil Middleton"
    %meta{:"http-equiv" => "content-type", :content => "text/html; charset=utf-8"}
    %meta{name: "author", content: "Neil Middleton"}
    = stylesheet_link_tag "application", :media => "all"
    %link{rel: "alternate", type: "application/rss+xml", title: "Neil Middleton", href: "/feed.xml"}

    = partial 'layouts/typekit'
    = partial 'layouts/ga'

  %body
    %section.header
      .container
        %section.name
          %a{href: "/"}
            %span#neil
              @neilmiddleton
        %section.meta
          %ul
            %li
              %a#articles{href: "/articles"} Articles
            %li
              %a#github{href: "https://github.com/neilmiddleton"} Github
            %li
              %a#twitter{href: "https://twitter.com/neilmiddleton"} Twitter
    .container
      = yield
      %footer
        neil {at} neilmiddleton {dot} com
